|---------------------------------------------------------|
|LAYOUT OPTIONS | fixed                                   |
|               | layout-boxed                            |
|               | layout-top-nav                          |
|               | sidebar-collapse                        |
|               | sidebar-mini                            |
|---------------------------------------------------------|
-->

<body class="hold-transition skin-blue sidebar-mini">
    <div class="wrapper">
        <!-- Main Header -->
        <header class="main-header">
            <!-- Logo -->
            <a asp-action="Index" asp-controller="Home" asp-area="" class="logo">
                <!-- mini logo for sidebar mini 50x50 pixels -->
                <span class="logo-mini"><b>L</b>IF</span>
                <!-- logo for regular state and mobile devices -->
                <span class="logo-lg"><b>Lee</b>Info</span>
            </a>
            <!-- Header Navbar -->
            <nav class="navbar navbar-static-top" role="navigation">
                <!-- Sidebar toggle button-->
                <a href="#" class="sidebar-toggle" data-toggle="push-menu" role="button">
                    <span class="sr-only">Toggle navigation</span>
                </a>
                <!-- Navbar Right Menu -->
                <div class="navbar-custom-menu">
                    <ul class="nav navbar-nav">
                        <!-- Notifications Menu -->
                        @await Component.InvokeAsync("Alert")
                        <!-- User Account Menu -->
                        <li class="dropdown user user-menu">
                            <!-- Menu Toggle Button -->
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                <!-- The user image in the navbar-->
                                <img src="~/lib/adminlte/dist/img/user2-160x160.jpg" class="user-image" alt="User Image">
                                <!-- hidden-xs hides the username on small devices so only the image appears. -->
                                <span class="hidden-xs">@_userManager.GetUserName(User)</span>
                            </a>
                            <ul class="dropdown-menu">
                                <!-- The user image in the menu -->
                                <li class="user-header">
                                    <img src="~/lib/adminlte/dist/img/user2-160x160.jpg" class="img-circle" alt="User Image">
                                    <p>
                                        @User.Identity.Name - LeeInfo
                                        @{
                                            AppIdentityUser _user = await _userManager.FindByNameAsync(User.Identity.Name);
                                            DateTime _dt = _user.RegisterDate;
                                            //string str_dt = _dt.ToString("MMMM", new System.Globalization.CultureInfo("en-us")) + "." + _dt.Year;
                                            string str_dt = _dt.ToString("MMM. yyyy", new System.Globalization.CultureInfo("en-us"));
                                            //Get RoleName
                                            var list_roles = await _userManager.GetRolesAsync(_user);
                                        }
                                        <small>Member since @str_dt</small>
                                    </p>
                                </li>
                                <!-- Menu Body -->
                                @*<li class="user-body">
                                        <div class="row">
                                            <div class="col-xs-4 text-center">
                                                <a href="#">Followers</a>
                                            </div>
                                            <div class="col-xs-4 text-center">
                                                <a href="#">Sales</a>
                                            </div>
                                            <div class="col-xs-4 text-center">
                                                <a href="#">Friends</a>
                                            </div>
                                        </div>
                                        <!-- /.row -->
                                    </li>*@
                                <!-- Menu Footer-->
                                <li class="user-footer">
                                    <div class="pull-left">
                                        <a id="editModal" data-toggle="modal" asp-action="Edit" asp-controller="UserAdmin" asp-route-area="AppIdentity" asp-route-id="@_userManager.GetUserId(User)" data-target="#modal-action" class="btn btn-default btn-flat">Profile</a>
                                    </div>
                                    <div class="pull-right">
                                        <a asp-action="Logout" asp-controller="Account" asp-route-area="AppIdentity" class="btn btn-default btn-flat">Sign Out</a>
                                    </div>
                                </li>
                            </ul>

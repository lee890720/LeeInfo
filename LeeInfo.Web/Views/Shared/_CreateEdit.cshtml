<section class="content-header">
    <h1>
        @ViewData["action"]
        <small>@ViewData["controller"]</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> @ViewData["area"]</a></li>
        <li><a asp-action="Index"> @ViewData["controller"]</a></li>
        <li class="active"> @ViewData["action"]</li>
    </ol>
</section>
<!-- Main content -->
<section class="content">
    <div class="row">
        <!-- left column -->
        <div class="col-md-12">
            <!-- general form elements -->
            <div class="box box-primary">
                <!-- form start -->
                <form asp-action="@ViewData["action"]" role="form">
                    @await Html.PartialAsync("_ModalHeader", new ModalHeader { Heading = ViewData["action"].ToString() + "\t" + ViewData["controller"].ToString()})
                    @*<div class="box-header with-border">
                        </div>*@
                    <!-- /.box-header -->
                    <div class="box-body">
                        @RenderBody()
                    </div>
                    <!-- /.box-body -->
                    @*<div class="box-footer col-md-offset-8">
                                <button type="submit">提交</button><button asp-action="Index">返回</button>
                        </div>*@
                    @await Html.PartialAsync("_ModalFooter", new ModalFooter { })
                </form>
            </div>
            <!-- /.box -->
        </div>
    </div>
</section>
<!-- /.content -->

    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
        <i class="fa fa-flag-o"></i>
        <span class="label label-danger">@Model.Count()</span>
    </a>
    <ul class="dropdown-menu">
        <li class="header">You have @Model.Count() tasks</li>
        <li>
            <!-- inner menu: contains the actual data -->
            <ul class="menu">
                    <li>
                        <a href="/CreditCard/CcdRecord/Create">
                            <i class="fa fa-tasks text-aqua"></i><span style="color:black">&emsp;@Model.Count() tasks in CcD</span>
                        </a>
                    </li>
            </ul>
        </li>
        <li class="footer">
            <a href="#">View all tasks</a>
        </li>
    </ul>
</li>
@model CcdData
@{
    Layout = "_CreateEdit";
    var actionName = ViewContext.RouteData.Values["action"].ToString();
    var controllerName = ViewContext.RouteData.Values["controller"].ToString();
    var areaName = ViewContext.RouteData.Values["area"].ToString();
    ViewData["action"] = actionName;
    ViewData["controller"] = controllerName;
    ViewData["area"] = areaName;
}

<div class="col-md-6">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    @if (ViewData["action"].ToString() == "Create")
    { }
    else
    {
        <input type="hidden" asp-for="CreditCardId" />
    }
    <div class="form-group">
        <label asp-for="CcdPerson.PersonName" class="control-label"></label>
        <select asp-for="PersonId" class="form-control" asp-items="ViewBag.PersonId"></select>
        <span asp-validation-for="PersonId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="IssuingBank" class="control-label"></label>
        <select asp-for="IssuingBank" asp-items="@Html.GetEnumSelectList(typeof(BankType))" class="form-control"></select>
        <span asp-validation-for="IssuingBank" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CreditCardNumber" class="control-label"></label>
        <input asp-for="CreditCardNumber" class="form-control" />
        <span asp-validation-for="CreditCardNumber" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Limit" class="control-label"></label>
        <input asp-for="Limit" class="form-control" />
        <span asp-validation-for="Limit" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Temporary" class="control-label"></label>
        <input asp-for="Temporary" class="form-control" />
        <span asp-validation-for="Temporary" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="TempDate" class="control-label"></label>
        <input asp-for="TempDate" type="date" class="form-control" />
        <span asp-validation-for="TempDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="AccountBill" class="control-label"></label>
        <input asp-for="AccountBill" type="date" class="form-control" />
        <span asp-validation-for="AccountBill" class="text-danger"></span>
    </div>
</div>
<div class="col-md-6">
    <div class="form-group">
        <label asp-for="RepaymentDate" class="control-label"></label>
        <input asp-for="RepaymentDate" type="date" class="form-control" />
        <span asp-validation-for="RepaymentDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="BillAmount" class="control-label"></label>
        <input asp-for="BillAmount" class="form-control" />
        <span asp-validation-for="BillAmount" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ValidThru" class="control-label"></label>
        <input asp-for="ValidThru" class="form-control" />
        <span asp-validation-for="ValidThru" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Cvv" class="control-label"></label>
        <input asp-for="Cvv" class="form-control" />
        <span asp-validation-for="Cvv" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="TransactionPw" class="control-label"></label>
        <input asp-for="TransactionPw" class="form-control" />
        <span asp-validation-for="TransactionPw" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="InquriyPw" class="control-label"></label>
        <input asp-for="InquriyPw" class="form-control" />
        <span asp-validation-for="InquriyPw" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="OnlineBankingPw" class="control-label"></label>
        <input asp-for="OnlineBankingPw" class="form-control" />
        <span asp-validation-for="OnlineBankingPw" class="text-danger"></span>
    </div>
</div>


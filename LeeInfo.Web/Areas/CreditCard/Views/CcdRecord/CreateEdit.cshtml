@model CcdRecord
@{
    Layout = "_CreateEdit";
    var actionName = ViewContext.RouteData.Values["action"].ToString();
    var controllerName = ViewContext.RouteData.Values["controller"].ToString();
    var areaName = ViewContext.RouteData.Values["area"].ToString();
    ViewData["action"] = actionName;
    ViewData["controller"] = controllerName;
    ViewData["area"] = areaName;
}

<div class="col-md-12">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    @if (ViewData["action"].ToString() == "Create")
    { }
    else
    {
        <input type="hidden" asp-for="RecordId" />
    }
    <div class="form-group">
        <label asp-for="CreditCardId" class="control-label"></label>
        <select asp-for="CreditCardId" class="form-control" asp-items="ViewBag.CreditCardId"></select>
        <span asp-validation-for="CreditCardId" class="text-danger"></span>
    </div>
    @if (ViewData["action"].ToString() == "Create")
    { }
    else
    {
        <div class="form-group">
            <label asp-for="RecordDate" class="control-label"></label>
            <input asp-for="RecordDate" type="date" class="form-control" />
            <span asp-validation-for="RecordDate" class="text-danger"></span>
        </div>
    }
    <div class="form-group">
        <label asp-for="PosId" class="control-label"></label>
        <select asp-for="PosId" class="form-control" asp-items="ViewBag.PosId"></select>
        <span asp-validation-for="PosId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Deposit" class="control-label"></label>
        <input asp-for="Deposit" class="form-control" />
        <span asp-validation-for="Deposit" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Expend" class="control-label"></label>
        <input asp-for="Expend" class="form-control" />
        <span asp-validation-for="Expend" class="text-danger"></span>
    </div>
</div>

                            targets: "col2-color-hidden",
                            createdCell: function (td, cellData, rowData, row, col) {
                                if (cellData > 0)
                                    $(td).css('color', '#4cae05');
                                else
                                    $(td).css('color', '#ff5256');
                                $(td).addClass(" hidden-xs");
                            },
                        },
                        {
                            targets: "col2-color",
